<div class="body">
<h1>addresses#edit</h1>
</div>

<h1>配送先編集</h1>
	<%= form_with(model: @address, local: true) do |f| %>
    <h2>郵便番号(ハイフンなし)</h2>
	<%= f.text_field :postal_code %>
	<h2>住所</h2>
	<%= f.text_area :address %>
	<h2>宛名</h2>
	<%= f.text_field :name %>

	<%= f.submit '編集する' %>
	<% end %>


