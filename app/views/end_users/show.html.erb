<div class="container">
     <div class="row">
		<div class="body">
			<div class="table-title">
				<h1>マイページ</h1>
			</div>


			<div class=“table”>
				<span style="font-size: 20px">登録情報</span>
				<span><%= link_to "編集する", edit_end_user_path(@end_user.id), class: "btn btn-success" %></span>
				<span><%= link_to "パスワードを変更する", new_end_user_password_path(current_end_user), class: "btn btn-success" %></span>
			</div>

			<table class = "table">
				<tr>
					<td>氏名</td>
					<td><%= @end_user.last_name %><%= @end_user.first_name %></td>
				</tr>
				<tr>
					<td>カナ</td>
					<td><%= @end_user.last_name_kana %><%= @end_user.first_name_kana %></td>
				</tr>
				<tr>
					<td>郵便番号</td>
					<td><%= @end_user.postal_code %></td>
				</tr>
				<tr>
					<td>住所</td>
					<td><%= @end_user.address %></td>
				</tr>
				<tr>
					<td>メールアドレス</td>
					<td><%= @end_user.email %></td>
				</tr>
				<tr>
					<td>電話番号</td>
					<td><%= @end_user.telephone_number %></td>
				</tr>
			</table>

			<table class = "table">
				<tr>
					<td>配送先</td>
					<td><%= link_to "一覧を見る",addresses_path(@end_user.id), class: "btn btn-success" %></td>
		    		</tr>
			    <tr>
					<td>注文履歴</td>
					<td><%= link_to "一覧を見る",orders_path, class: "btn btn-success" %></td>
	    		</tr>
			</table>
		</div>
	</div>
</div>





