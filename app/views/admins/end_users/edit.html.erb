<div class="body">
  <div class="container">
    <h3>
      <%= @end_user.last_name+@end_user.first_name %>
        さんの会員情報
    </h3>

    <div class="row title">
      <div>
        <label class="col-xs-2">会員ID</label>
        <div class="col-xs-10">
          <%= @end_user.id %>
        </div>
      </div>


      <%= form_for(@end_user,url: {controller: "end_users", action: "update"}) do |f| %>
        <div class="text">
          <label class="col-xs-2">氏名</label>
          <%= f.text_field :last_name %>
            <%= f.text_field :first_name %>
        </div>

        <div class="text">
          <label class="col-xs-2">フリガナ</label>
          <%= f.text_field :last_name_kana %>
            <%= f.text_field :first_name_kana %>
        </div>

        <div div class="text">
          <label class="col-xs-2">郵便番号</label>
          <%= f.text_field :postal_code %>
        </div>

        <div div class="text">
          <label class="col-xs-2">住所</label>
          <%= f.text_field :address %>
        </div>

        <div div class="text">
          <label class="col-xs-2">電話番号</label>
          <%= f.text_field :telephone_number %>
        </div>

        <div div class="text">
          <label class="col-xs-2">メールアドレス</label>
          <%= f.text_field :email %>
        </div>

        <div div class="text">
          <label class="col-xs-2">会員ステータス</label>
          <%= f.label :is_deleted, :有効 %>
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted, :退会済 %>
          <%= f.radio_button :is_deleted, true %>
        </div>
        <div class="action">
          <%= f.submit '変更を保存する', class: "btn btn-primary" %>
        </div>
        <% end %>
    </div>
  </div>
  