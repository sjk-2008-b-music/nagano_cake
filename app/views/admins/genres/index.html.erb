<div class="container">
     <div class="row">
		<div class="body">
			<h1>ジャンル一覧・追加</h1>
		</div>

		<div class="body">
			<%= form_with model: [:admins, @genre], local: true do |f| %>
    			<p>ジャンル</p>
					<%= f.text_field :name, class: "name" %>
    				<%= f.label :is_active, :有効 %>
    				<%= f.radio_button :is_active, true %>
    				<%= f.label :is_active, :無効 %>
    				<%= f.radio_button :is_active, false %>
    				<%= f.submit '追加' %>
			 <% end %>
		</div>

		<div class="body">
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th>ジャンル</th>
						<th>状態</th>
						<th></th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @genres.each do |genre| %>
						<tr>
							<td><%= genre.name %></td>
						<% if genre.is_active %>
							<td>有効</td>
						<% else %>
							<td>無効</td>
						<% end %>
							<td><%= link_to "編集する", edit_admins_genre_path(genre.id), class: "btn-sm btn-success item_#{genre.id}" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
