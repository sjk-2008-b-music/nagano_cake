<div class="body">
  <div class="container">
    <h3 class="title">注文履歴一覧</h3>
    <table class="table table-inverse panel panel-default">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admins_order_path(order) do %>
                <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
                  <% end %>
            </td>
            <td>
              <%= order.end_user.last_name %>
                <%= order.end_user.first_name %>
            </td>
            <% total_mount = 0 %>
              <% order.order_details.each do |order_detail| %>
                <% total_mount += order_detail.amount %>
                  <% end %>
                    <td>
                      <%= total_mount %>
                    </td>
                    <td>
                      <%= order.status %>
                    </td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>
