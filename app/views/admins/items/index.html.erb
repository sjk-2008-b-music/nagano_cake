
<div class="container">
     <div class="row">
		<div class="body">
			<h1>商品一覧</h1>
			<%= link_to "商品新規登録", new_admins_item_path %>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th>商品ID</th>
							<th>商品名</th>
							<th>税抜価格</th>
							<th>ジャンル</th>
							<th>ステータス</th>
							<th colspan="3"></th>
						</tr>
					</thead>
				<tbody>

					<% @items.each do |item| %>
						<tr>
							<td><%= item.id %></td>
							<td><%= link_to item.name, admins_item_path(item.id), class: "item_#{item.id}" %></td>
							<td><%= item.price %></td>
							<td><%= item.genre.name %></td>
								<% if item.is_active %>
							<td>販売中</td>
								<% else %>
							<td>販売停止中</td>
								<% end %>
						</tr>
					<% end %>
				</tbody>
				</table>
		</div>
	</div>
</div>
