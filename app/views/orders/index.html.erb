<div class="body">
<h1>orders#index</h1>
</div>

<h1>注文履歴一覧</h1>
<table class="table">
	  <thead>
	    <tr>
	      <th>配送先</th>
	      <th>注文商品</th>
	      <th>支払金額</th>
	      <th>ステータス</th>
	      <th>注文詳細</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>
	  <tbody>
	  <% @order_details.each do |order_detail| %>
			<td><%= order_detail.order.postal_code %><%= order_detail.order.address %><%= order_detail.order.name %></td>
			<td><%= order_detail.item.name %></td>
			<td><%= order_detail.order.total_payment %></td>
			<td><%= order_detail.order.status %></td>
			<td><%= link_to "表示する", order_path(order_detail.order.id), class: "btn btn-success" %></td>
	   </tr>
	   <% end %>
	  </tbody>
</table>
<!-- 注文詳細は表示するボタンをつける -->

