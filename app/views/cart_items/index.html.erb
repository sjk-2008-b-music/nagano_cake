<div class="body">
<h3>ショッピングカート</h3>
<%= link_to "カートを空にする", cart_items_destroy_all_path(@cart_items), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-danger pull-right" %>


<table class="table table-bordered">
			<thead>
				<tr>
					<th>商品名</th>
					<th>単価（税込）</th>
					<th>数量</th>
					<th>小計</th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				<% @total_price = 0 %>
				<% @cart_items.each do |cart_item| %>
				<tr>
					<td>
						<%= attachment_image_tag @cart_item, :item_id, :fill, 50, 100 %>
						<%= cart_item.item.name %>
					</td>

					<td>
						<%= cart_item.item.price %>
					</td>

					<td>
						<%= form_with(model: cart_item, local: true, url: cart_item_path(cart_item), method: :patch) do |f| %>
						<%= number_field_tag :amount, cart_item.amount %>
						<%= f.submit '変更', class: "btn btn-primary" %>
						<% end %>
					</td>

					<td>
						<%= cart_item.item.price * cart_item.amount.to_i %>
					</td>

					<td>
						<%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn-sm btn-danger" %>
					</td>
				</tr>
				<% @total_price += cart_item.item.price  * cart_item.amount %>
				<% end %>
			</tbody>
</table>

<%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>
<table class="table table-bordered">
<th>合計金額</th>
<td><%= @total_price.to_i %></td>
</table>
<%= form_with(model: @order, local: true, url: new_order_path, method: :get) do |f| %>
<%= f.submit "情報入力に進む", class: "btn btn-success pull-center" %>
<% end %>

</div>